<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Archieve Your Grade</title>
  <!-- Jquery -->
  <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
  <!-- Semantic  -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
  <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/dropdown.js"></script>
  <!-- Font Awesome for Awesome icons  -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <!-- My own stylesheet -->
  <link rel="stylesheet" href="/stylesheets/main.css">
</head>

<body>

  <!-- NavBar -->
  <div class="ui secondary pointing menu">
    <a class="item huge header" href="/">
      AYG
    </a>
    <a class="item" href="/classes">
      Classes
    </a>
    <a class="item" href="/result">
      Calculate
    </a>
    <div class="right menu">
      <% if(!currentUser){ %>
      <a class="ui item" href="/register">
        <i class="fas fa-user-plus"> Signup</i>
      </a>
      <a class="ui item" href="/login">
        <i class="fas fa-user"> Login</i>
      </a>
      <% } else{ %>
      <a class="ui item" href="/">
        SignedIn As
        <%= currentUser.username %>
      </a>
      <a class="ui item" href="/logout">
        <i class="fas fa-user"> Logout</i>
      </a>
      <% } %>
    </div>
  </div>

  <!-- Flash messages in all pages -->
  <div class="container">
    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
    <% } %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
      <%= success %>
    </div>
    <% } %>

  </div>

  <!-- script for the menu  -->
  <!-- TODO: This doesn't work:
    it should remove the active class and
    add it to the clicked element.  -->
  <script type="text/javascript">
  $('.ui.pointing.menu')
     .on('click', '.item', function() {
       if(!$(this).hasClass('dropdown')) {
         $(this)
           .addClass('active')
           .siblings('.item')
             .removeClass('active');
       }
     });
  </script>
