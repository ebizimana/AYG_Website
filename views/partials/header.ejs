</head>

<body>
  <!-- NavBar -->
  <div class="ui secondary pointing menu">
    <a class="item huge header" href="/">
      AYG
    </a>
    <a class="item" href="/classes">
      Classes
    </a>
    <a class="item" href="/result">
      Calculate
    </a>
    <div class="right menu">
      <% if(!currentUser){ %>
      <a class="ui item" href="/register">
        <i class="fas fa-user-plus"> Signup</i>
      </a>
      <a class="ui item" href="/login">
        <i class="fas fa-user"> Login</i>
      </a>
      <% } else{ %>
      <a class="ui item" href="/">
        SignedIn As
        <%= currentUser.username %>
      </a>
      <a class="ui item" href="/logout">
        <i class="fas fa-user"> Logout</i>
      </a>
      <% } %>
    </div>
  </div>

  <!-- Flash messages in all pages -->
  <div class="container">
    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
    <% } %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
      <%= success %>
    </div>
    <% } %>

  </div>
