<% include ../partials/header %>
<div class="container">
  <h1 id="header">Create a New Class</h1>
  <div class="row" id="container">
    <form action="/classes" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="class[className]" placeholder="Class Name">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="class[courseName]" placeholder="Course Name">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="class[professor]" placeholder="Professor">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit"> Submit</button>
      </div>
    </form>
  </div>
</div>


