<% include ../partials/header %>

<link rel="stylesheet" href="/stylesheets/class.css">
<div id="container">
  <h1> Class List
    <a href="/classes/new">
      <div class="ui icon button" data-tooltip="Add Class">
        <i class="plus icon" id="change-color"></i>
      </div>
    </a>
  </h1>
  <ul>
    <% classes.forEach(function(oneClass){ %>
      <li class="className">
        <form class="delete-form" action="/classes/<%= oneClass._id %>?_method=DELETE" method="post">
          <button type="submit"><i class="fas fa-trash-alt"></i></button>
        </form>
        <a href="/classes/<%= oneClass._id %>"> <%= oneClass.className %></a>
      </li>
    <% }) %>
  </ul>
</div>

<% include ../partials/footer %>
