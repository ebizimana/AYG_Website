<% include ../partials/header %>

<!-- initializing variables -->
<% numberOfAssign = 0 %>
<% gradeArr       = [] %>
<% totalArr       = [] %>
<% idArr          = [] %>
<% classFound.assignments.forEach(function(oneClass){ %>
  <% numberOfAssign += 1 %>
  <% gradeArr.push(oneClass.grade) %>
  <% totalArr.push(oneClass.total) %>
  <% idArr.push(oneClass._id) %>
<% }) %>

<!-- Display the calculation errors -->
<div id="message"></div>

<!-- Class Edit and Display  -->
<div class="ui header text-center" style="margin-left:20px;">
  <h1>
    <a id="editClass" href="/classes/<%= classFound._id%>/edit"
      data-toggle="popover" data-placement="top"
      title="<%= classFound.className %>"
      data-html="true"
      data-content="Course Name: <%= classFound.courseName %> <br/>
                    Professor: <%=classFound.professor %>"
      data-trigger="hover">
      <strong><%= classFound.className %></strong>
    </a>
    <div class="modal fade modalEditClass" id="editOneClass" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
      </div>
    </div>

    <hr style="width:30%; margin-top:5px;">
  </h1>
</div>

<!-- Grade picker  -->

<div id="widnow" class="widnow ui raised very padded text container segment">
  <div id="title_bar" class="ui header">
    <div id="button">-</div>
  </div>

  <div id="box" class="ui form">
    <div class="text-center">
      <h3 style="display: inline-block; margin-right:10px;" class="ui header"><label >Pick A Grade: </label></h3>
      <select class="ui selection dropdown" name="grade" id="grade-selector">
        <option value="a">A</option>
        <option value="b">B</option>
        <option value="c">C</option>
        <option value="d">D</option>
        <option value="f">F</option>
      </select>
    </div>

    <div class="text-center">
      <button type="submit"
              class="btn btn-info btn-rounded btn-md"
              onclick="runClass('<%=numberOfAssign%>','<%=[ gradeArr ]%>','<%=[ totalArr ]%>','<%=[ idArr ]%>')">
        Submit
      </button>
    </div>
  </div>
</div>

<div class="ui main show-page container">
  <!-- Assignment Configuration -->
  <div id="header" class="wrapper-modal-editor">
    <div class="row d-flex justify-content-center modalWrapper">

      <!-- Add new assignment to the table  -->
      <div class="text-center">
        <a href="/classes/<%= classFound._id %>/assignment/new"
           class="btn btn-info btn-rounded btn-sm" id="addAssignment">Add
          <i class="fas fa-plus-square ml-1"></i>
        </a>
      </div>
      <div class="modal fade addNewInputs" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="modalAdd" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
          </div>
        </div>
      </div>

      <!-- Edit the selected assignment  -->
      <div class="text-center buttonEditWrapper">
        <button class="btn btn-info btn-rounded btn-sm buttonEdit"
                id="editAssignment" disabled>Edit
                <i class="fas fa-pencil-square ml-1"></i>
        </button>
      </div>
      <div class="modal fade modalEditClass" id="modalEdit" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
          </div>
        </div>
      </div>

      <!-- Delete the selected  assignment  -->
      <div class="text-center">
          <button id="deleteAssignment"
                  class="btn btn-danger btn-sm btn-rounded buttonDelete delete-form"
                  disabled> Delete <i class="fas fa-times ml-1"></i>
          </button>
      </div>
      <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="modalDelete" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Assignments Table -->
  <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <th class="th-sm">Name</th>
      <th class="th-sm">Grade</th>
      <th class="th-sm">Total</th>
      <th class="th-sm"> Estimate </th>
    </thead>
    <tbody>
      <% classFound.assignments.forEach(function(oneClass){ %>
      <tr onclick="editRow('<%=oneClass._id %>','<%=classFound._id %>')" >
        <td>
          <%= oneClass.name %>
        </td>
        <td>
          <%= oneClass.grade %>
        </td>
        <td>
          <%= oneClass.total %>
        </td>
        <td id="<%= oneClass._id %>"></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Assignments Stats  -->
  <!-- TODO: To close the div   -->
  <div  id="assignmentStats" class="ui raised very padded text container segment">
    <div id="title_bar" class="ui header">
      <div id="button2">-</div>
    </div>
    <div id="box2">
      <h1 class="ui header">You have:
        <span id="maxGrade"></span> /
        <span id="maxTotal"></span>
      </h1>
      <h3>Points left before you lose your grade :
        <span id="pointsLeft"></span>
      </h3>
    </div>

  </div>

</div>

<script type="text/javascript" src="/js/result.js"></script>
<% include ../partials/footer %>
